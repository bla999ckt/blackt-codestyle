{
  "name": "blackt-codestyle",
  "displayName": "BlackT Code Style",
  "description": "VS Code extension to apply custom code styles.",
  "version": "1.0.5",
  "publisher": "bla999ckt",
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.78.0"
  },
  "activationEvents": [
    "onCommand:codestyle",
    "onCommand:blackt-codestyle.applyCodeStyle"
  ],
  "main": "./extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bla999ckt/blackt-codestyle.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "codestyle",
        "title": "Apply Code Style"
      },
      {
        "command": "blackt-codestyle.applyCodeStyle",
        "title": "Apply Code Style"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "style50Explorer",
          "name": "Code Style"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/vscode": "^1.96.0",
    "esbuild": "^0.24.2"
  },
  "scripts": {
    "package": "vsce package",
    "compile": "echo 'No compilation necessary'",
    "vscode:prepublish": "npm run compile",
    "build": "esbuild extension.js --bundle --outfile=out/extension.js --external:vscode"
  },
  "dependencies": {
    "black": "^0.3.0",
    "chalk": "^5.4.1",
    "clang-format": "^1.8.0",
    "prettier": "^3.4.2"
  }
}
